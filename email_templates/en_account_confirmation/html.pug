doctype mobile
link(rel="stylesheet", href="/css/email.css", data-inline)
table.body(border="0", cellpadding="0", cellspacing="0")
 tr
  td
   td.container
    div.content
     span.preheader
     table.main
       tr
        td.wrapper
         table(border="0", cellpadding="0", cellspacing="0")
          tr
           td
            p Hi there,
            p We received a request to set your WellLiving email to #{target_email}. If this is correct, please use security code below to confirm:
          tr
           td(align="center")
            span(style={'border-bottom': '1px dashed rgb(204, 204, 204)', 'z-index': '1', position: 'static'}) #{security_code}
          tr
           td
            p Please note that Security Code is valid in #{expiration} minutes. If you are having any issues with your account, please don't hesitate to contact us by replying to this email.
            p Once you confirm, all future messages about your WellLiving account will be sent to #{target_email}.
          tr
           td
            p WellLiving Team
  td